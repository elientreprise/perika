{
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
                "options": {
                    "subjectLength": 50,
                    "bodyLineLength": 72
                }
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            "vendor/bin/phpstan analyse",
            "vendor/bin/php-cs-fixer fix --dry-run",
            "vendor/bin/phpunit --testsuite Unit"
        ]
    }
}
